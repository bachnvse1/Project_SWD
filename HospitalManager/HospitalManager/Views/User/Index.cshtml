@model IEnumerable<HospitalLibrary.DataAccess.User>

<h2>Danh sách Người Dùng</h2>

<a href="@Url.Action("Create", "User")" class="btn btn-success" style="margin-bottom: 15px;">Add New User</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên người dùng</th>
            <th>Email</th>
            <th>Giới tính</th>
            <th>Số điện thoại</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@(user.Gender == true ? "Nam" : "Nữ")</td>
                <td>@user.Phone</td>
                <td>
                    <a href="@Url.Action("Edit", "User", new { id = user.UserId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "User", new { id = user.UserId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
